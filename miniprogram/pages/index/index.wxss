/* pages/findInfo/findInfo.wxss */
@import "../../style/weui.wxss";

.title {
  margin-left: 8%;
  margin-top: 30rpx;
  font-size: 46rpx;
}

.desc {
  font-size: 28rpx;
  color: #666565;
  text-align: left;
  margin-left: 18%;
  margin-bottom: 8%;
}

.intro-style {
  font-size: 20rpx;
  color: #666565;
  width: 100%;
  margin-top: 0rpx;
  display: block;
}

.row-style {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.about-me-div {
  width: 72rpx;
  padding: 2rpx;
  float: right;
  text-align: center;
  /* margin-right: 0; *//* text-align: right;  */
}

.about-me {
  width: 70rpx;
  height: 70rpx;
  margin: 2rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-bottom: 0rpx;
  display: block;
  /* margin-right: 5%; */
}

/* 设置背景遮罩层样式 */

.b1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999;
}

/* 设置展示图片大小 */

.b2 {
  width: 85%;
  height: 85%;
}

.intro-img {
  width: 100%;
}

/* 设置展示图片与关闭按钮图片的距离 */

.t_w {
  margin-top: 20rpx;
  z-index: 999;
  /* position: fixed; */
}

/* 设置关闭按钮图片显示的大小 */

.b2 image {
  width: 100%;
  height: 100%;
}

/* 设置关闭按钮宽高 */

.t_image {
  width: 60rpx;
  height: 60rpx;
}
